{
  "layer": "top",
  "modules-left": ["mpris"],
  "mpris": {
    "format": "{player_icon} {dynamic}",
    "rotate": 0,
    "format-paused": "{status_icon} <i>{dynamic}</i>",
    "format-stopped": "No music playing",
    "format-disconnected": "No music playing",
    "player-icons": {
      "default": "\u25b6",
      "mpv": "\ud83c\udfb5"
    },
    "status-icons": {
      "paused": "\uf04c",
      "stopped": "No music playing"
    },
    "max-length": 1000,
    "interval": 1
  }
}
